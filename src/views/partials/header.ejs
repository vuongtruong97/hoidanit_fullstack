<header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
            <% if(typeof user == 'undefined') { %>
            <span class="text-muted" href="#"
                ><b>Hello, well come to my website!!</b></span
            >
            <%} else { %>
            <span class="text-muted"><b>Hello: <%= user.email %></b></span>
            <%} %>
        </div>
        <div class="col-4 text-center">
            <a class="blog-header-logo text-dark" href="/">
                <img class="header-logo" src="/logo/Bad.png" alt="" />
            </a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a class="text-muted" href="#">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="mx-3"
                >
                    <circle cx="10.5" cy="10.5" r="7.5"></circle>
                    <line x1="21" y1="21" x2="15.8" y2="15.8"></line>
                </svg>
            </a>
            <% if(typeof user == 'undefined') { %>
            <a class="btn btn-sm btn-outline-secondary" href="/login">Login</a>
            <%} else { %>
            <div class="dropdown show">
                <a
                    class="btn btn-secondary dropdown-toggle"
                    href="#"
                    role="button"
                    id="dropdownMenuLink"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                >
                    <%= user.firstName+' '+user.lastName %>
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="/user/profile/<%= user.id %>"
                        >Profile</a
                    >
                    <a class="dropdown-item" href="#">Posts</a>
                    <a class="dropdown-item" href="/user/logout">Log out</a>
                </div>
            </div>
            <%} %>
        </div>
    </div>
</header>
