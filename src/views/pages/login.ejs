<div class="container">
    <h2 class="text-center" id="title">Vuong Truong NodeJs</h2>
    <hr />
    <div class="row">
        <div class="col-md-5 mx-auto">
            <form method="POST" action="/user/login" role="form">
                <fieldset>
                    <p class="text-uppercase">Login using your account:</p>

                    <div class="form-group">
                        <input
                            type="email"
                            name="email"
                            id="email"
                            class="form-control input-lg"
                            placeholder="email"
                        />
                    </div>
                    <div class="form-group">
                        <input
                            type="password"
                            name="password"
                            id="password"
                            class="form-control input-lg"
                            placeholder="Password"
                        />
                    </div>
                    <div class="mx-auto">
                        <input
                            type="submit"
                            class="btn btn-primary"
                            value="Login"
                        />
                        <a href="/register" class="btn btn-primary">Register</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
